<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheet/style">
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <title>My Reviews</title>
  </head>
  <body>
    <!-- Navbar -->
    <%- include('partials/navbar') %>
    <!-- Main -->
    <main>
      <h2 class="text-center">My Reviewed Recipes</h2>
      <!-- My Reviews -->
      <div class="container my-4 mx-auto p-4 rounded-3 shadow-md secondary-color">
        <% let count = recipeByReviews.length - 1 %> <% for (let i=0; i<recipeByReviews.length/2; i++) { %>
        <div class="row mx-auto mb-4">
          <% for (let j=0; j<2; j++) { %> <% if (count !== -1) { %>
          <div class="col-6">
            <div class="card m-auto w-50">
              <img src="<%= recipeByReviews[count].strMealThumb %>" class="card-img-top" alt="<%= recipeByReviews[count].strMeal %>" style="max-width: 410px" />
              <div class="card-body">
                <h5 class="card-title"><%= recipeByReviews[count].strMeal %></h5>
                <a href="/<%= recipeByReviews[count].idMeal %>" class="btn btn-primary">View</a>
              </div>
            </div>
          </div>
          <% } %> <% count-- %> <% } %>
        </div>
        <% } %>
      </div>
    </main>
    <footer><%- include('partials/footer') %></footer>
  </body>
</html>
